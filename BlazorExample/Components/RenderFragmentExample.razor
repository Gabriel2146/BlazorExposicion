
@page "/renderfragment"

<h3>Ejemplo de Render Fragment</h3>

<p>Este es un ejemplo de cómo usar un render fragment en Blazor.</p>

<div class="container">

    <h2>Contenido dinámico:</h2>

    @ChildContent
</div>

<button @onclick="OnClick">Haz clic aquí desde el componente</button>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private void OnClick()
    {
        // Acción al hacer clic en el botón
        Console.WriteLine("¡Se hizo clic en el botón!");
    }
}




